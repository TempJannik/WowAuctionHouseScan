        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfitChecker"
        mc:Ignorable="d"
        Title="Auction House Monitor" Height="455.042" Width="800" Loaded="Window_Loaded">
    <Grid x:Name="mainGrid">
        <Button Content="Add Item" HorizontalAlignment="Left" Height="26" Margin="530,388,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
