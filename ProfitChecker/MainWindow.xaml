        <TextBlock x:Name="textconsole" HorizontalAlignment="Left" Margin="586,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="293" Width="189"/>
        <Label x:Name="update" Content="Last AH update: " HorizontalAlignment="Left" Margin="586,335,0,0" VerticalAlignment="Top" Width="189"/>
        <Label x:Name="nextupdate" Content="Next AH update: " HorizontalAlignment="Left" Margin="586,357,0,0" VerticalAlignment="Top" Width="189"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="762,0,0,0" VerticalAlignment="Top" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Red" Click="Button_Click_3"/>
    </Grid>
</Window>
